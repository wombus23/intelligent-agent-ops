# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional but recommended for tracing)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=intelligent-agent-ops

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini
FALLBACK_MODEL=gpt-3.5-turbo

# Orchestration Settings
MAX_CONCURRENT_AGENTS=3
TASK_TIMEOUT=120
ENABLE_PARALLEL_EXECUTION=true

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_DAILY=100.0
COST_ALERT_MONTHLY=1000.0

# Prompt Versioning
ENABLE_PROMPT_VERSIONING=true
PROMPT_STORAGE_PATH=prompts/versions

# Observability
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_METRICS=true

# Retry Configuration
MAX_RETRIES=3
